{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:js-app",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "paths": ["packages/frontend/**", "packages/api-mock/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "paths": ["packages/backend/**"],
      "matchPackageNames": [
        "*golang*",
        "*mysql*",
        "*redis*"
      ],
      "automerge": false
    }
  ]
}
