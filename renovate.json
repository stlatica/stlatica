{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "paths": ["packages/frontend/**", "packages/api-mock/**"],
      "extends": [    
        "config:js-app",
        "group:allNonMajor"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "paths": ["packages/backend/**"],
      "matchPackageNames": [
        "*golang*",
        "*mysql*",
        "*redis*"
      ],
      "automerge": false
    }
  ]
}
